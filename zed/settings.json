{
  "tab_size": 4,
  "features": {
    "inline_completion_provider": "none"
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "ui_font_size": 23,
  "buffer_font_size": 18,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Colorizer"
  },
  "inactive_opacity": 0.75,
  "auto_install_extensions": {
    "html": true
  },
  "autosave": "off",
  "auto_update": false,
  "buffer_font_family": "Hack Nerd Font",
  "ui_font_family": "Hack Nerd Font",
  "confirm_quit": true,
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history"
  },
  "format_on_save": "off",
  "formatter": "language_server",
  "use_autoclose": true
 }
